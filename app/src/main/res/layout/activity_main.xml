<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Shaxsiy kabinet"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textSize="28dp"
        android:background="#AFADA3"
        android:textColor="#717171"
        android:textAllCaps="false"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="76dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:text="Kirish"
      android:textSize="28dp"
      android:textStyle="bold"
      android:textColor="#717171"
      android:background="#AFADA3"
      android:textAllCaps="false"/>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeKvartal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="32dp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/codeKvartal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kvartal raqamini kiriting "
            android:textColor="@color/black"
            android:textSize="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:padding="16dp"
        android:id="@+id/kvarabtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/clip"
        app:layout_constraintTop_toTopOf="@id/codeKvartal"
        app:layout_constraintBottom_toBottomOf="@id/codeKvartal"
        app:layout_constraintStart_toEndOf="@id/codeKvartal"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeBino"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="32dp"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/codeBinoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bino raqamini kiriting "
            android:textColor="@color/black"
            android:textSize="20dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:padding="16dp"
        android:id="@+id/binobtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/clip"
        app:layout_constraintTop_toTopOf="@id/codeBino"
        app:layout_constraintBottom_toBottomOf="@id/codeBino"
        app:layout_constraintStart_toEndOf="@id/codeBino"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codexonadon"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="32dp"
        app:layout_constraintVertical_bias="0.55"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/codeHonadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xonadon raqamini kiriting "
            android:textColor="@color/black"
            android:textSize="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:padding="16dp"
        android:id="@+id/xonadonbtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/clip"
        app:layout_constraintTop_toTopOf="@id/codexonadon"
        app:layout_constraintBottom_toBottomOf="@id/codexonadon"
        app:layout_constraintStart_toEndOf="@id/codexonadon"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeEdit"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintVertical_bias="0.7"
        android:layout_marginBottom="8dp">

    <EditText
        android:id="@+id/codeEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter yur code"
        android:textColor="@color/black"
        android:textSize="20dp"
        />


    </com.google.android.material.textfield.TextInputLayout>




</androidx.constraintlayout.widget.ConstraintLayout>